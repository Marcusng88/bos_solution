# Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Clerk Authentication (Frontend handles all auth)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Meta (Facebook/Instagram) OAuth Configuration
# Note: Use Facebook App ID for both platforms - Facebook OAuth gives access to Instagram Business accounts
NEXT_PUBLIC_META_APP_ID=your_facebook_app_id_here
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id_here
# NEXT_PUBLIC_INSTAGRAM_APP_ID=your_instagram_app_id_here  # Not needed when using Facebook OAuth

# OAuth Configuration
NEXT_PUBLIC_OAUTH_REDIRECT_BASE_URL=http://localhost:3000/auth/callback
NEXT_PUBLIC_OAUTH_SUCCESS_URL=http://localhost:3000/dashboard
NEXT_PUBLIC_OAUTH_ERROR_URL=http://localhost:3000/auth/error

# Optional: Supabase (if you want to use Supabase client directly in frontend)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
